{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "declaration": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": false,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "pages/*": ["src/pages/*"],
      "components/*": ["src/components/*"],
      "zustand/*": ["src/zustand/*"],
      "types/*": ["src/types/*"],
      "api/*": ["src/api/*"],
      "styles/*": ["src/styles/*"],
      "assets/*": ["src/public/*"],
      "constants/*": ["src/constants/*"],
      "utils/*": ["src/utils/*"],
      "chat/*": ["src/components/chat/*"],
      "hooks/*": ["src/hooks/*"],
      "supabase/*": ["src/api/supabase/*"]
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.svg",
    "src/**/*.png"
  ],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
